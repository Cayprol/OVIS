<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

		<record id="account.view_payment_term_line_form" model="ir.ui.view">
			<field name="name">account.payment.term.line.form</field>
			<field name="model">account.payment.term.line</field>
			<field name="arch" type="xml">
				<form string="Payment Terms">
					<div name="type">
						<h2 name="title">Term Type</h2>
						<group>
							<group>
								<field name="value" widget="radio"/>
							</group>

							<group>
								<div attrs="{'invisible':[('value','=', 'balance')]}" class="o_row">
									<label for="value_amount" attrs="{'invisible':[('value','=', 'balance')]}"/>
									<field name="value_amount" class="oe_inline"/>
									<span class="o_form_label oe_inline" attrs="{'invisible':[('value','!=','percent')]}">%</span>
								</div>
							</group>
						</group>
					</div>
					<field name="sequence" invisible="1"/>

					<div name="date">
						<h2 name="title">Due Date Computation</h2>
						<div colspan="2">
							<label for="days" string="Due" attrs="{'invisible': [('option','not in',('day_after_invoice_date','after_invoice_month'))]}"/>
							<field name="days" class="oe_inline" attrs="{'invisible': [('option','not in',('day_after_invoice_date','after_invoice_month'))]}"/>


							<label for="days" string="Due on the" attrs="{'invisible': [('option','not in',('day_following_month','day_current_month'))]}"/>
							<field name="days" class="oe_inline" attrs="{'invisible': [('option','not in',('day_following_month','day_current_month'))]}"/>

							<label for="option" string=""/>
							<field name="option" class="oe_inline"/>
						</div>

						<div attrs="{'invisible': [('option','not in',('on_date_after_month'))]}">
							<label for="day_of_the_month" string="Due on date"/>
							<field name="day_of_the_month" class="oe_inline"/>
							<label for="months" string="&#160;after"/>
							<field name="months" class="oe_inline"/><strong>&#160;months</strong>
						</div>			
					</div>
				</form>

			</field>
		</record>

	</data>
 </odoo>
					 
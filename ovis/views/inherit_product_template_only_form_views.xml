<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="inherit_product_template_only_form_view">
			<field name="model">product.template</field>
			<field name="name">inherit.product.template.only.form.view</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<!-- Replace Field "barcode" -->
				<xpath expr="//field[@name='barcode']" position="replace">
					<field name="drawing"/>
				</xpath>

				<!-- Add Field "buyer_ids" -->
				<xpath expr="//page[@name='sales']//group[@name='sale']" position="before">
					<group string="Customers" name="customers" attrs="{'invisible': [('product_variant_count','&gt;',1)]}" modifiers="{'invisible':[['product_variant_count','&gt;',1]]}">
						<field name="buyer_ids" context="{'default_product_tmpl_id':context.get('product_tmpl_id',active_id), 'product_template_invisible_variant': True}" nolabel="1" modifiers="{}"/>
					</group>
					<group string="Customers" name="variant_customers" attrs="{'invisible': [('product_variant_count','&lt;=',1)]}" modifiers="{'invisible':[['product_variant_count','&lt;=',1]]}">
						<field name="variant_buyer_ids" context="{'default_product_tmpl_id': context.get('product_tmpl_id', active_id)}" nolabel="1" modifiers="{}"/>
					</group>
				</xpath>
			</field>
		</record>
	</data>
</odoo>
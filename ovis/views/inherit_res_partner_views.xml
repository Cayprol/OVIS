<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<!-- Add page Forwarder to set contact as a forwarder -->
		<record model="ir.ui.view" id="inherit_view_partner_form">
			<field name="model">res.partner</field>
			<field name="name">inherit.res.partner.form</field>
			<field name="inherit_id" ref="base.view_partner_form"/>
			<field name="arch" type="xml">
				<xpath expr="//page[@name='sales_purchases']" position="after">
					<page name='forwarder' string="Forwarder">
						<group string="Forwarder" name="forwarder" priority="1">
							<field name="forwarder"/>
						</group>
					</page>
				</xpath>
			</field>
		</record>

		<!-- Add filter Forwarder to quick search all forwarders in Contacts -->
		<record  model="ir.ui.view" id="inherit_view_res_partner_filter">
			<field name="model">res.partner</field>
			<field name="name">inherit.res.partner.select</field>
			<field name="inherit_id" ref="base.view_res_partner_filter"/>
			<field name="arch" type="xml">

				<xpath expr="//filter[@name='supplier']" position="after">
					<filter string="Forwarders" name="forwarder" domain="[('forwarder','=',1), ('parent_id', '=', False)]"/>
				</xpath>
			</field>
		</record>


	</data>
</odoo>
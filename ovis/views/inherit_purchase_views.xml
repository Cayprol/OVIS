<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="inherit_purchase_order_form">
			<field name="model">purchase.order</field>
			<field name="name">inherit.purchase.order.form</field>
			<field name="inherit_id" ref="purchase.purchase_order_form"/>
			<field name="arch" type="xml">

				<xpath expr="//field[@name='date_planned']" position="attributes">
					<attribute name="widget">date</attribute>
				</xpath>

				<xpath expr="//field[@name='qty_received']" position="after">
					<field name="qty_qualified" attrs="{'column_invisible': [('parent.state', 'not in', ('purchase', 'done'))]}"/>
				</xpath>

			</field>
		</record>

	</data>
</odoo>
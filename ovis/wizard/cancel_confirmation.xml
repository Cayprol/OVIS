<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record model="ir.ui.view" id="view_cancel_confirmation">
			<field name="model">cancel.confirmation</field>
			<field name="name">ovis.cancel_confirmation</field>
			<field name="arch" type="xml">
				<form string="Cancel Confirmation">
					<group>
						<p>
							This record is going to be canceled. Please, doublecheck.
						</p><p class="text-muted">
							Related records will not be affected.
							Make sure all stream of actions are manually inspected before canceling.
						</p>
					</group>
					<footer>
						<button name="action_confirm" string="Confirm" type="object" class="oe_highlight"/>
						<button string="_Cancel" class="btn-secondary" special="cancel" />
					</footer>
				</form>
			</field>
		</record>
	</data>
</odoo>
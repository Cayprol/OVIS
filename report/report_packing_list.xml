<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

	<!-- External layouts styles -->
	<template id="packing_list_external_layout_background">
		<div class="header o_background_header">
			<div class="pull-right">
				<h3 class="mt0 text-right" t-field="company.report_header"/>
			</div>
			<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" class="pull-left"/>
			<div class="pull-left company_address">
				<div>
					<strong t-field="company.partner_id.name"/>
				</div>
				<span t-field="company.partner_id"
					t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
			</div>
			<div class="clearfix mb8"/>
		</div>

		<div class="article o_report_layout_background">
			<t t-raw="0" />
		</div>

		<div class="footer o_background_footer">
			<div class="text-center">
				<ul class="list-inline">
					<li t-if="company.phone"><i class="fa fa-phone"/> <span t-field="company.phone"/></li>
					<li t-if="company.email"><i class="fa fa-at"/> <span t-field="company.email"/></li>
					<li t-if="company.website"><i class="fa fa-globe"/> <span t-field="company.website"/></li>
					<li t-if="company.vat"><i class="fa fa-building-o"/><t t-esc="company.country_id.vat_label or 'TIN'"/>: <span t-field="company.vat"/></li>
				</ul>
				<div t-field="company.report_footer"/>
				<div class="text-muted">
					Page:
					<span class="page"/>
					of
					<span class="topage"/>
				</div>
			</div>
		</div>
	</template>

	<template id="packing_list_external_layout_boxed">
		<div class="header o_boxed_header">
			<div class="row mb8">
				<div class="col-xs-6">
					<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"/>
				</div>
				<div class="col-xs-6 text-right mb4">
					<h4 class="mt0" t-field="company.report_header"/>
					<div name="company_address" class="mb4">
						<span class="company_address" t-field="company.partner_id"
							t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
					</div>
				</div>
			</div>
		</div>

		<div class="article o_report_layout_boxed">
		  <t t-raw="0" />
		</div>

		<div class="footer o_boxed_footer">
			<div class="text-center">
				<ul class="list-inline">
					<li t-if="company.phone">Tel: <span t-field="company.phone"/></li>
					<li t-if="company.email">Mail: <span t-field="company.email"/></li>
					<li t-if="company.website">Web: <span t-field="company.website"/></li>
					<li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'TIN'"/>: <span t-field="company.vat"/></li>
				</ul>
				<div t-field="company.report_footer"/>
				<div>
					Page: <span class="page"/> / <span class="topage"/>
				</div>
			</div>
		</div>
	</template>

	<template id="packing_list_external_layout_clean">
		<div class="header o_clean_header">
			<div class="row">
				<div class="col-xs-6">
					<img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)"/>
				</div>
				<!-- <div class="col-xs-5 col-xs-offset-1" name="company_address">
					<ul class="list-unstyled">
						<strong><li t-if="company.name"><span t-field="company.name"/></li></strong>
						<li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'TIN'"/>: <span t-field="company.vat"/></li>
						<li t-if="company.phone">Tel: <span t-field="company.phone"/></li>
						<li t-if="company.email"><span t-field="company.email"/></li>
						<li t-if="company.website"><span t-field="company.website"/></li>
					</ul>
				</div> -->
			</div>
		</div>

		<div class="article o_report_layout_clean">
			<t t-raw="0" />
		</div>

		<div class="footer o_clean_footer">
			<div class="row mt8">
				<div class="col-xs-3">
					<span t-field="company.report_footer"/>
				</div>
				<div class="col-xs-4 text-right">
					<span class="company_address" t-field="company.partner_id"
						t-field-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
				</div>
				<div class="col-xs-4">
					<h4 class="mt0 mb0 text-uppercase" t-field="company.report_header"/>
				</div>
				<div class="col-xs-1">
					<ul class="list-inline pagenumber pull-right text-center">
						<li><strong><span class="page"/></strong></li>
					</ul>
				</div>
			</div>
		</div>
	</template>

	<!-- Main style -->
	<template id="packing_list_external_layout_standard">
		<div class="header" style="">
			<div t-if="o.signature == 'ovis'" class="row">
				<div class="col-xs-4">
					<!-- <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % to_text(company.logo)" style="max-height: 125px;"/> -->
					<img src="/ovis/static/logo/ovis.png" style="max-height: 125px;"/>
				</div>
				<div class="col-xs-5 col-xs-offset-3" style="margin-top:18px;">
					<p>
						<span style="font-size:19px;"><strong>長 徑 企 業 股 份 有 限 公 司</strong></span><br></br>
						新北市新莊區中正路６４９之８號４樓<br></br>
						4F, No. 649-8, Zhongzheng Rd., Xinzhuang Dist.,<br></br>
						New Taipei City 242, Taiwan ROC<br></br>
					</p>
				</div> 
			</div>
			<div t-if="o.signature == 'ovis_int'" class="row">
				<div class="col-xs-4">
					<img src="/ovis/static/logo/ovis_int.png" style="max-height: 125px;"/>
				</div>
				<div class="col-xs-5 col-xs-offset-3" style="margin-top:18px;">
					<p>
						<span style="font-size:19px;"><strong>TAIWAN OFFICE</strong></span><br></br>
						4F, No. 649-8, Zhongzheng Rd., Xinzhuang Dist.,<br></br>
						New Taipei City 242, Taiwan ROC<br></br>
					</p>
				</div> 
			</div>
			<div t-if="o.signature == 'pangu'" class="row">
				<div class="col-xs-4 text-center">
					<img src="/ovis/static/logo/pangu.png" style="max-height: 125px;"/>
				</div>
				<div class="col-xs-5 col-xs-offset-3" style="margin-top:18px;">
					<p>
						<span style="font-size:19px;"><strong>磐 古 电 子 有 限 公 司</strong></span><br></br>
						广东省东莞市塘厦镇高丽六路６号<br></br>
						No. 6, GaoLi 6th Rd., TangXia Town<br></br>
						Dongguan City, GuangDong, China<br></br>
					</p>
				</div> 
			</div>
		</div>
		<div class="article o_report_layout_standard">
			<t t-raw="0" />
		</div>

		<div class="footer">
			<div class="row last-page" style="margin-bottom:6px;margin-right:10px;page-break-inside:avoid;">
				<div t-if="o.signature == 'pangu'" class="pull-right">
					<h3 align="center"><span t-field="o.signature"/></h3>
					<h3>&#160;</h3>
					<p align="center">__________________________<br></br>Authorized Signature</p>
				</div>
				<div t-if="o.signature == 'ovis'" class="pull-right">
					<h3 align="center"><span t-field="o.signature"/></h3>
					<h3>&#160;</h3>
					<p align="center">___________________________________<br></br>Authorized Signature</p>						
				</div>
				<div t-if="o.signature == 'ovis_int'" class="pull-right">
					<h3 align="center"><span t-field="o.signature"/></h3>
					<h3>&#160;</h3>
					<p align="center">______________________________________<br></br>Authorized Signature</p>
				</div>
			</div>
			<div class="text-center" style="border-top: 1px solid black;">
				<ul class="list-inline mb4">
					<li t-if="company.phone">Phone: <span t-field="company.phone"/></li>
					<li t-if="company.email">Email: <span t-field="company.email"/></li>
					<li t-if="company.website">Web: <span t-field="company.website"/></li>
					<li t-if="company.vat"><t t-esc="company.country_id.vat_label or 'TIN'"/>: <span t-field="company.vat"/></li>
				</ul>

				<div name="financial_infos">
					<span t-field="company.report_footer"/>
				</div>

				<div class="text-muted">
					Page: <span class="page"/> / <span class="topage"/>
				</div>
			</div>
		</div>
	</template>

	<!-- This template will be called, and based on condition choosing a style above -->
	<template id="packing_list_external_layout">
		<!-- Multicompany -->
		<t t-if="not o and doc">
			<t t-set="o" t-value="doc"/>
		</t>

		<t t-if="o and 'company_id' in o">
			<t t-set="company" t-value="o.company_id.sudo()"/>
		</t>
		<t t-if="not o or not 'company_id' in o">
			<t t-set="company" t-value="res_company"/>
		</t>

		<t t-if="company.external_report_layout == 'background'">
			<t t-call="ovis.packing_list_external_layout_background"><t t-raw="0"/></t>
		</t>
		<t t-if="company.external_report_layout == 'boxed'">
			<t t-call="ovis.packing_list_external_layout_boxed"><t t-raw="0"/></t>
		</t>
		<t t-if="company.external_report_layout == 'clean'">
			<t t-call="ovis.packing_list_external_layout_clean"><t t-raw="0"/></t>
		</t>
		<t t-if="company.external_report_layout in (False, 'standard')">
			<t t-call="ovis.packing_list_external_layout_standard"><t t-raw="0"/></t>
		</t>
	</template>
	<!--  -->

	<!-- PACKING LIST -->
	<template id="report_packing_document">
		<t t-call="web.html_container">
			<t t-call="ovis.packing_list_external_layout">
				<t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
				<div class="page">
					<h2 align="center">PACKING LIST</h2>
					<div class="row" style="margin-top:16px;border-bottom: 1px solid black;">
						<div class="col-xs-4">
							<span><strong>SHIPPER: </strong></span><br></br>
							<p style="margin-left:12px;">
								<span t-field="o.shipping_id.forwarder_id"/><br></br>
								<span>FROM <span t-field="o.shipping_id.departure_id"/> TO <span t-field="o.shipping_id.destination_id"/></span><br></br>
								<span>BY <span t-field="o.way"/></span><br></br>
								<span>SAILING ON <span t-field="o.sailing"/></span><br></br>
							</p>
						</div>

						<div class="col-xs-4 col-xs-offset-4">
							<strong>MARKS &amp; NOS.</strong><br></br>
							<p style="margin-left:12px;">
								<span t-field="o.name"/><br></br>
								(IN DIA)<br></br>
								C/NO: <span t-field="o.marks_carton"/><br></br>
								MADE IN <span t-field="o.shipping_id.marks_made_in_id"/><br></br>
							</p>
						</div>
					</div>

					<div class="row" style="margin-top:12px;border-bottom: 1px solid black;">
						<div class="col-xs-4" t-if="o.bill_to">
							<span><strong>BILL TO: </strong></span><br></br>
							<div style="margin-left:12px;">
								<div t-field="o.bill_to" t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
							</div>
						</div>
						<div class="col-xs-4" t-if="not o.bill_to">
							<span><strong>BILL TO: </strong></span><br></br>
							<div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header" style="margin-left:12px;">
								<div t-field="o.move_lines[0].partner_id"
								   t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
							</div>
							<div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header" style="margin-left:12px;">
								<div t-field="o.partner_id"
								   t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
							</div>
						</div>
						<div class="col-xs-4 col-xs-offset-4">
							<span><strong>SHIP TO: </strong></span><br></br>
							<div t-if="o.move_lines and o.move_lines[0].partner_id" name="partner_header" style="margin-left:12px;">
								<div t-field="o.move_lines[0].partner_id"
								   t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
							</div>
							<div t-if="not (o.move_lines and o.move_lines[0].partner_id) and o.partner_id" name="partner_header" style="margin-left:12px;">
								<div t-field="o.partner_id"
								   t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
							</div>
						</div>
					</div>
					<div class="row" style="margin-top:12px;">
						<div class="col-xs-4">
							<strong>Source: </strong><span t-field="o.origin"/>
						</div>
					</div>
					<table class="table table-condensed mt48" t-if="not o.move_line_ids">
						<thead>
							<tr>
								<th><strong>C/No.</strong></th>
								<th><strong>Product</strong></th>
								<th><strong>Quantity</strong></th>
								<th class="text-right"><strong>Net Weight&#160;&#160;&#160;&#160;</strong></th>
								<th class="text-right"><strong>Gross Weight&#160;&#160;</strong></th>						
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="o.move_lines" t-as="move">
								<td><span t-field="move.carton"/></td>
								<td><span t-field="move.product_id"/></td>
								<td>
									<span t-field="move.quantity_done"/>
									<span t-field="move.product_uom"/>
								</td>
								<td class="text-right">
									<span t-field="move_line.net_weight"/>
									<span t-field="move_line.weight_unit_id"/>
								</td>
								<td class="text-right">
									<span t-field="move_line.gross_weight"/>
									<span t-field="move_line.weight_unit_id"/>
								</td>
							</tr>
						</tbody>
					</table>
					<table class="table table-condensed mt48" t-if="o.move_line_ids">
						<t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" groups="stock.group_production_lot"/>
						<thead>
							<tr>
								<th><strong>C/No.</strong></th>
								<th><strong>Product</strong></th>
								<th name="lot_serial" t-if="has_serial_number">
									Lot/Serial Number
								</th>
								<th class="text-center"><strong>Quantity</strong></th>
								<th class="text-right"><strong>Net Weight&#160;&#160;&#160;&#160;</strong></th>
								<th class="text-right"><strong>Gross Weight&#160;&#160;</strong></th>
							</tr>
						</thead>
						<tbody>
							<tr t-foreach="o.move_line_ids.sorted(key=lambda a:(a.carton))" t-as="move_line">
								<td><span t-field="move_line.carton"></span></td>
								<td>
									<span t-field="move_line.product_id"/>
									<p t-if="o.picking_type_code == 'outgoing'">
										<span t-field="move_line.product_id.sudo().description_pickingout"/>
									</p>
									<p t-if="o.picking_type_code == 'incoming'">
										<span t-field="move_line.product_id.sudo().description_pickingin"/>
									</p>
								</td>
								<t t-if="has_serial_number">
								   <td>
										<table width="100%">
											<tr>
												<td>
													 <span t-field="move_line.lot_id"/>
													 <t t-if="not move_line.lot_id">
														 <span t-field="move_line.lot_name"/>
													 </t>
												 </td>
												 <td name="lot_qty">
													 <t t-if="move_line.product_qty"> 
														<span t-field="move_line.product_qty"/>
													</t>
												</td>
											</tr>
										</table>
								  </td>
								</t>
								<td class="text-center">
									<span t-field="move_line.qty_done"/>
									<span t-field="move_line.product_uom_id"/>
								</td>
								<td class="text-right">
									<span t-field="move_line.net_weight"/>
									<span t-field="move_line.weight_unit_id"/>
								</td>
								<td class="text-right">
									<span t-field="move_line.gross_weight"/>
									<span t-field="move_line.weight_unit_id"/>
								</td>
							</tr>
							<tr>
								<td><strong>Total:</strong></td>
								<td>
									<p><span t-field="o.carton_total"/> Cartons</p>
								</td>
								
								<td class="text-center">
									<span t-field="o.done_total" t-esc="'%.3f'%"/>
									 <span t-field="o.product_uom_id"/>
								</td>
								<td class="text-right">
									<span t-field="o.net_weight_total"/>
									<span t-field="o.weight_unit"/>
								</td>
								<td class="text-right">
									<span t-field="o.gross_weight_total"/>
									<span t-field="o.weight_unit"/>
								</td>
							</tr>
						</tbody>
					</table>
					<p t-if="o.backorder_id">
						This shipment is a backorder of <t t-esc="o.backorder_id.name"/>.
					</p>
					<p>
						<t t-if="o.search([('backorder_id', '=', o.id), ('state', 'not in', ['cancel', 'done'])])">
							All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
						</t>
					</p>
					<p t-if="o.remarks">
						REMARKS: <span t-field="o.remarks"/>
					</p>
				</div>
			</t>
		</t>
	</template>


	<template id="report_packing_list">
		<t t-foreach="docs" t-as="o">
			<t t-call="ovis.report_packing_document" t-lang="o.partner_id.lang"/>
		</t>
	</template>

</odoo>

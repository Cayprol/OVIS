<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

	<template id="report_receivable_document">
		<t t-call="web.html_container">
			<t t-call="ovis.external_layout">
				<t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})" />
				<div class="page">
					<h2 align="center">Account Receivable</h2>
					<div class="row" style="margin-top:16px;border-bottom: 1px solid black;">
						<div class="col-xs-4">
							<span t-field="o.partner_id"/>

						</div>
					</div>
				</div>
			</t>
		</t>
	</template>


	<template id="report_account_receivable">

		<t t-foreach="docs" t-as="o">
			<t t-call="ovis.report_receivable_document" t-lang="o.partner_id.lang"/>
		</t>

	</template>

</odoo>
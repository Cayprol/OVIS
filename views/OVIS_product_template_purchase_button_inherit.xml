<?xml version="1.0" encoding="utf-8" ?>

<odoo>
	<data>
		<record model="ir.ui.view" id="purchase_button_placement">
			<field name="model">product.template</field>
			<field name="name">product.template.purchase.button.inherit.ovis</field>
			<field name="inherit_id" ref="purchase.view_product_template_purchase_buttons_from"></field>
			<field name="arch" type="xml">

				<xpath expr="//button[@name="toggle_active"]" position="replace">
					<button class="oe_stat_button" name="324" type="action" icon="fa-shopping-cart">
						<field string="testingP" name="purchase_count" widget="statinfo"/>
					</button>
				</xpath>

			</field>
		</record>
	</data>
</odoo>
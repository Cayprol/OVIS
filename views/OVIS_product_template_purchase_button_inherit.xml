<?xml version="1.0" encoding="utf-8" ?>

<odoo>
	<data>
		<record model="ir.ui.view" id="purchase_button_placement">
			<field name="model">product.template</field>
			<field name="name">product.template.purchase.button.inherit.ovis</field>
			<field name="inherit_id" ref="purchase.view_product_template_purchase_buttons_from"></field>
			<field name="arch" type="xml">

				<xpath expr="//field[@name='arch']" position="replace">
					<field name="arch" type="xml">
						<button name="action_view_quotations" position="after">
							<button class="oe_stat_button" name="%(purchase.action_purchase_line_product_tree)d" type="action" icon="fa-shopping-cart">
								<field string="Purchases" name="purchase_count" widget="statinfo"/>
							</button>
						</button>
					</field>
				</xpath>

			</field>
		</record>
	</data>
</odoo>
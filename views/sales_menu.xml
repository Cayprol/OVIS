<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Add filter "forwarder" to res.partner, which used in multiple modules actions when clicking its menus -->
	<record id="inherit_view_res_partner_filter" model="ir.ui.view">
		<field name="name">ovis.inherit.res.partner.select</field>
		<field name="model">res.partner</field>
		<field name="inherit_id" ref="base.view_res_partner_filter"/>
		<field name="arch" type="xml">
			<xpath expr="//filter[@name='supplier']" position="after">
				<filter string="Forwarders" name="forwarder" domain="[('forwarder','=',1), ('parent_id', '=', False)]"/>
			</xpath>
		</field>
	</record>

	<!-- Add action when menuitem is clicked on -->
	<record id="action_partner_forwarder_form" model="ir.actions.act_window">
			<field name="name">Forwarders</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="view_type">form</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{'search_default_forwarder':1, 'default_customer': 0, 'default_supplier': 0, 'default_forwarder': 1}</field>
			<field name="search_view_id" ref="base.view_res_partner_filter"/>
			<field name="help" type="html">
			  <p class="oe_view_nocontent_create">
				Click to add a contact in your address book.
			  </p><p>
				Odoo helps you easily track all activities related to
				a forwarder: discussions, history of business opportunities,
				documents, etc.
			  </p>
			</field>
	</record>

	<!-- Add menuiteme to show in view, the action is defined above -->
	<menuitem id="res_partner_menu_forwarders_in_sales" name="Forwarders" parent="sale.sale_order_menu" action="ovis.action_partner_forwarder_form" sequence="4"/>
</odoo>
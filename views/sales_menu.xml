<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_filter_forwarder" model="ir.ui.view"> 
		<field name="model">res.partner</field> 
		<field name="priority">15</field> 
		<field name="arch" type="xml"> 
			<search>
				<field name="name"/>
				<field name="forwarder"/>
				<filter name="forwarder" string="Forwarders" domain="[('forwarder','=',True)]"/>
				<!-- filter name is referred in context for purpose such as default filter -->
			</search> 
		</field> 
	</record>

	<record id="action_partner_form" model="ir.actions.act_window">
			<field name="name">Forwarders</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">res.partner</field>
			<field name="view_type">form</field>
			<field name="view_mode">kanban,tree,form</field>
			<field name="context">{"search_default_forwarder":1}</field>
			<field name="search_view_id" ref="view_filter_forwarder"/>
			<field name="help" type="html">
			  <p class="oe_view_nocontent_create">
				Click to add a contact in your address book.
			  </p><p>
				Odoo helps you easily track all activities related to
				a forwarder: discussions, history of business opportunities,
				documents, etc.
			  </p>
			</field>
	</record>

	<menuitem id="res_partner_menu_forwarders_in_sales" name="Forwarders" parent="sale.sale_order_menu" action="OVIS.action_partner_form" sequence="4"/>
</odoo>
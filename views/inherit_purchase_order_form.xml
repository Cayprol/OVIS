<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record model="ir.ui.view" id="inherit_purchase_order_form">
		<field name="model">purchase.order</field>
		<field name="name">ovis.inherit.purchase_order_form</field>
		<field name="inherit_id" ref="purchase.purchase_order_form"/>
		<field name="arch" type="xml">

			<xpath expr="//field[@name='company_id']" position="after">
				<field name="invoice_create" invisible="1"/>
			</xpath>

			<xpath expr="//button[@name='action_view_invoice']" position="attributes">
				<attribute name="attrs">{'invisible':['|', ('state', 'in', ('draft','sent','to approve')), ('invoice_ids','=',[]), ('invoice_create', '=', False)]}</attribute>
			</xpath>

		</field>
	</record>
</odoo>
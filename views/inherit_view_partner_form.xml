<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record model="ir.ui.view" id="inherit_view_partner_form">
			<field name="model">res.partner</field>
			<field name="name">ovis.inherit.res.partner.views</field>
			<field name="inherit_id" ref="base.view_partner_form"></field>
			<field name="arch" type="xml">

				<!-- Add Farwarder Section under page sales_purchaees -->
				<xpath expr="//group[@name='container_row_2']" position="attributes">
					<attribute name="col">6</attribute>

				</xpath>
				<xpath expr="//group[@name='purchase']" position="after">
					<group string="Forwarder" name="forwarder">
						<field name="forwarder"/>
					</group>		
				</xpath>

			</field>
		</record>

	</data>
</odoo>
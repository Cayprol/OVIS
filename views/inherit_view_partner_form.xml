<?xml version="1.0" encoding="utf-8" ?>
<odoo>
	<data>
		<record model="ir.ui.view" id="inherit_view_partner_form">
			<field name="model">res.partner</field>
			<field name="name">ovis.inherit.res.partner.views</field>
			<field name="inherit_id" ref="base.view_partner_form"></field>
			<field name="arch" type="xml">

				<!-- Add Page and Field Forwarder -->
				<xpath expr="//page[@name='sales_purchases']" position="after">
					<page name="forwarder" string="Forwarder">
						<group name="container_row_2">					
							<group string="Forwarder" name="forwarder">
								<field name="forwarder"/>
							</group>
						</group>
					</page>
				</xpath>

			</field>
		</record>

	</data>
</odoo>
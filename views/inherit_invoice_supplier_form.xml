<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record model="ir.ui.view" id="inherit_view_payment_term_form">
		<field name="model">account.payment.term</field>
		<field name="name">ovis.inherit.view_payment_term_form</field>
		<field name="inherit_id" ref="account.view_payment_term_form"/>
		<field name="arch" type="xml">

			<xpath expr="//field[@name='company_id']" position="attributes">
				<attribute name="invisible">0</attribute>
				<attribute name="readonly">1</attribute>
			</xpath>

		</field>
	</record>

	<record model="ir.ui.view" id="inherit_invoice_supplier_form">
		<field name="model">account.invoice</field>
		<field name="name">ovis.inherit.invoice_supplier_form</field>
		<field name="inherit_id" ref="account.invoice_supplier_form"/>
		<field name="arch" type="xml">

			<xpath expr="//field[@name='payment_term_id']" position="after">
				<field name="temp"/>
			</xpath>

		</field>
	</record>

</odoo>
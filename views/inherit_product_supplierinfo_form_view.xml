<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="inherit_product_supplierinfo_form_view" model="ir.ui.view">
		<field name="name">ovis.inherit.product.supplierinfo.form.view</field>
		<field name="model">product.supplierinfo</field>
		<field name="inherit_id" ref="product.product_supplierinfo_form_view"></field>
		<field name="arch" type="xml">

			<!-- Add Field "sp_qty" with units as "min_qty" has -->
			<xpath expr="//label[@for='price']" position="before">
				<label for="sp_qty" string="Smallest Pack"/>
				<div>
					<field name="sp_qty" class="oe_inline"/>
					<field name="product_uom" class="oe_inline" groups="product.group_uom"/>
				</div>
			</xpath>

			<xpath expr="//group[1]//group[2]" position="after">
				<group string="Description">
					<field name="description" nolabel="1" style="max-width: 438px;" placeholder="Payment terms &amp; conditions, extra pricing details, etc..."/>
				</group>
			</xpath>

			<xpath expr="//field[@name='company_id']" position="after">
				<label for="write_date" string="Last Modified"/>
				<div>
					<field name="write_date" class="oe_inline" modifiers="{'readonly': true}"/> by <field name="write_uid" class="oe_inline" modifiers="{'readonly': true}"/>
				</div>
			</xpath>
		</field>
	</record>

</odoo>
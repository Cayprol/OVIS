<?xml version="1.0" encoding="utf-8"?>
<odoo>

		<record model="ir.ui.view" id="inherit_view_order_form">
			<field name="model">sale.order</field>
			<field name="name">ovis.inherit.view_order_form</field>
			<field name="inherit_id" ref="sale.view_order_form"/>
			<field name="arch" type="xml">

				<xpath expr="//field[@name='payment_term_id']" position="after">
					<field name="client_order_ref"/>
					<field name="user_company_id"/>
					<field name="match"/>
				</xpath>

				<xpath expr="//button[@name='239']" position="attributes">
					<attribute name="attrs">{'invisible': ['|', ('invoice_status', '!=', 'to invoice'), ('match', '=', False)]}</attribute>
				</xpath>

				<!-- to be removed, xpath found success -->
				<xpath expr="//button[@name='239']" position="after">
					<button name="action_unlock" type="object" string="Unlock" states="done" groups="sales_team.group_sale_manager"/>
				</xpath>

			</field>
		</record>
</odoo>
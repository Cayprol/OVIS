<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record model="ir.ui.view" id="inherit_view_order_form">
		<field name="model">sale.order</field>
		<field name="name">ovis.inherit.view_order_form</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">

			<xpath expr="//field[@name='company_id']" position="after">
				<field name="invoice_create" invisible="1"/>
			</xpath>

			<xpath expr="//button[@name='239']" position="attributes">
				<attribute name="attrs">{'invisible': ['|', ('invoice_status', '!=', 'to invoice'), ('invoice_create', '=', False)]}</attribute>
			</xpath>

		</field>
	</record>
</odoo>
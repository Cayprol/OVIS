<?xml version="1.0" encoding="UTF-8"?>
<odoo>
 	<record id="wizard_cancel_note_form" model="ir.ui.view">
		<field name="name">cancelnote.form</field>
		<field name="model">cancelnote.wizard</field>
		<field name="arch" type="xml">
			<form string="Friendly Reminder">
				<p>You must commit a reason for canceling!</p>
				<field name="note" required="1"/>
				<footer>
					<button name="button_apply" string="Yes" class="oe_highlight" type="object"/>
					<button name="Cancel" string="No" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>

</odoo>
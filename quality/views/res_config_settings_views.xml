<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="res_config_settings_view_form" model="ir.ui.view">
			<field name="name">res.config.settings.view.form.inherit.quality</field>
			<field name="model">res.config.settings</field>
			<field name="priority" eval="37"/>
			<field name="inherit_id" ref="base.res_config_settings_view_form"/>
			<field name="arch" type="xml">
				<xpath expr="//div[hasclass('settings')]" position="inside">
					<div class="app_settings_block" data-string="Quality" string="Quality" data-key="quality" groups="quality.group_quality_manager">
						<h2>Operation</h2>
						<div class="row mt16 o_settings_container">
							<div class="col-lg-6 col-12 o_setting_box" id="adjust_qo_lead" title="Number of days a quality order is allowed. Order after the deadline is considered as Late.">
								<div class="o_setting_left_pane">
									<field name="adjust_qo_lead"/>
								</div>
								<div class="o_setting_right_pane">
									<label for="adjust_qo_lead"/>
									<span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
									<div class="text-muted">
										Set a lead time in days for all quality orders.
									</div>
									<div class="content-group"  attrs="{'invisible': [('adjust_qo_lead','=',False)]}">
										<div class="mt16">
											<span class="col-lg-3"><field name="qo_lead" attrs="{'required': [('adjust_qo_lead', '=', True)]}"/> days</span>
										</div>
									</div>
								</div>
							</div>

							<div class="col-lg-6 col-12 o_setting_box" id="adjust_qo_default_user" title="Number of days a quality order is allowed. Order after the deadline is considered as Late.">
								<div class="o_setting_left_pane">
									<field name="adjust_qo_default_user"/>
								</div>
								<div class="o_setting_right_pane">
									<label for="adjust_qo_default_user"/>
									<span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
									<div class="text-muted">
										Set a user to assigned task by default.
									</div>
									<div class="content-group"  attrs="{'invisible': [('adjust_qo_default_user','=',False)]}">
										<div class="mt16">
											<span class="col-lg-3"><field name="qo_default_user" attrs="{'required': [('adjust_qo_default_user', '=', True)]}"/></span>
										</div>
									</div>
								</div>
							</div>


						</div>
					</div>
				</xpath>
			</field>
		</record>
	</data>
</odoo>